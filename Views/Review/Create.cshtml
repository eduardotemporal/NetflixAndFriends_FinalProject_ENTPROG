@model NetflixAndFriends_FinalProject_ENTPROG.Models.Review

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Review</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="border-color:black">
            <img class ="mb-5" src="~/Post9.jpg" height="95%" width="70%">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group ms-5">

                    <textarea asp-for="ReviewContent" style="border:0px solid #000" rows="15" cols="100"> 
                </textarea>
                    <span asp-validation-for="ReviewContent" class="text-danger"></span>
                </div>
                <center>
                    <div class="form-group ms-5">
                        <label style="font-family: 'Bebas Neue', cursive; font-size: 185%; color:white; background:black; border-color:black" asp-for="MovieTitle" class="control-label"> Solidarite</label>
                        <input type="hidden" asp-for="MovieTitle" class="form-control" value="Solidarite" />
                        <span asp-validation-for="MovieTitle" class="text-danger"></span>
                    </div>
                </center>
             
                <center>
                    <div class="form-group">
                       <br />
                        <input type="submit" value="Create Review" class="btn btn-primary ms-5" />
                    </div>
                </center>
               
            </form>
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="border-color:black">
</div>
</div>

<div>
    <a asp-action="Index">See All Reivews</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
